<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!-- Display -->
    <TextView
        android:id="@+id/tvDisplay"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="32sp"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="16dp"
        android:padding="16dp"
        app:layout_constraintWidth_percent="0.8"
        app:layout_constraintHorizontal_bias="0.5"/>

    <!-- Number Buttons -->
    <Button
        android:id="@+id/btn1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="1"
        app:layout_constraintWidth_percent="0.25"
        app:layout_constraintBottom_toTopOf="@id/btnKurang"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="16dp"/>

    <Button
        android:id="@+id/btn2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="2"
        app:layout_constraintWidth_percent="0.25"
        app:layout_constraintBottom_toTopOf="@id/btnKurang"
        app:layout_constraintLeft_toRightOf="@id/btn1"
        android:layout_marginTop="16dp"/>

    <Button
        android:id="@+id/btn3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="3"
        app:layout_constraintWidth_percent="0.25"
        app:layout_constraintBottom_toTopOf="@id/btnKurang"
        app:layout_constraintLeft_toRightOf="@id/btn2"
        android:layout_marginTop="16dp"/>

    <Button
        android:id="@+id/btnTambah"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="+"
        app:layout_constraintWidth_percent="0.25"
        app:layout_constraintBottom_toTopOf="@id/btnKurang"
        app:layout_constraintLeft_toRightOf="@id/btn3"
        android:layout_marginTop="16dp"/>

    <Button
        android:id="@+id/btn4"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="4"
        app:layout_constraintWidth_percent="0.25"
        app:layout_constraintBottom_toTopOf="@id/btnKali"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="8dp"/>

    <Button
        android:id="@+id/btn5"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="5"
        app:layout_constraintWidth_percent="0.25"
        app:layout_constraintBottom_toTopOf="@id/btnKali"
        app:layout_constraintLeft_toRightOf="@id/btn4"
        android:layout_marginTop="8dp"/>

    <Button
        android:id="@+id/btn6"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="6"
        app:layout_constraintWidth_percent="0.25"
        app:layout_constraintBottom_toTopOf="@id/btnKali"
        app:layout_constraintLeft_toRightOf="@id/btn5"
        android:layout_marginTop="8dp"/>

    <Button
        android:id="@+id/btnKurang"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="-"
        app:layout_constraintWidth_percent="0.25"
        app:layout_constraintBottom_toTopOf="@id/btnKali"
        app:layout_constraintLeft_toRightOf="@id/btn6"
        android:layout_marginTop="8dp"/>

    <Button
        android:id="@+id/btn7"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="7"
        app:layout_constraintWidth_percent="0.25"
        app:layout_constraintBottom_toTopOf="@id/btnBagi"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="8dp"/>

    <Button
        android:id="@+id/btn8"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="8"
        app:layout_constraintWidth_percent="0.25"
        app:layout_constraintBottom_toTopOf="@id/btnBagi"
        app:layout_constraintLeft_toRightOf="@id/btn7"
        android:layout_marginTop="8dp"/>

    <Button
        android:id="@+id/btn9"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="9"
        app:layout_constraintWidth_percent="0.25"
        app:layout_constraintBottom_toTopOf="@id/btnBagi"
        app:layout_constraintLeft_toRightOf="@id/btn8"
        android:layout_marginTop="8dp"/>

    <Button
        android:id="@+id/btnKali"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="x"
        app:layout_constraintWidth_percent="0.25"
        app:layout_constraintBottom_toTopOf="@id/btnBagi"
        app:layout_constraintLeft_toRightOf="@id/btn9"
        android:layout_marginTop="8dp"/>

    <Button
        android:id="@+id/btnBagi"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text=":"
        app:layout_constraintWidth_percent="0.25"
        app:layout_constraintBottom_toTopOf="@id/btnHasil"
        app:layout_constraintLeft_toRightOf="@id/btn9"
        android:layout_marginTop="8dp"/>

    <Button
        android:id="@+id/btnClear"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="C"
        app:layout_constraintWidth_percent="0.25"
        app:layout_constraintBottom_toTopOf="@id/btnHasil"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="8dp"/>

    <Button
        android:id="@+id/btn0"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="0"
        app:layout_constraintWidth_percent="0.5"
        app:layout_constraintBottom_toTopOf="@id/btnHasil"
        app:layout_constraintLeft_toRightOf="@id/btnClear"
        android:layout_marginTop="8dp"/>

    <!--Hasil-->
    <Button
        android:id="@+id/btnHasil"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Hasil"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
